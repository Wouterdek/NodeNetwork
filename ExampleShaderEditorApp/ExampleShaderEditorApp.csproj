<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFrameworks>netcoreapp3.0;net462</TargetFrameworks>
    <UseWPF>true</UseWPF>
    <AssemblyTitle>ExampleShaderEditorApp</AssemblyTitle>
    <Product>NodeNetwork</Product>
    <Copyright>Copyright (c) Wouter De Keersmaecker</Copyright>
  </PropertyGroup>
  <PropertyGroup>
    <NoWarn>$(NoWarn);NU1701</NoWarn>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Extended.Wpf.Toolkit" Version="3.4.0" />
    <PackageReference Include="MathNet.Numerics" Version="4.6.0" />
    <PackageReference Include="MathNet.Spatial" Version="0.4.0" />
    <PackageReference Include="OpenGL.Net" Version="0.7.1" />
    <PackageReference Include="OpenGL.Net.Math" Version="0.7.1" />
    <PackageReference Include="OpenGL.Net.WinForms" Version="0.7.1" />
    <PackageReference Include="System.Numerics.Vectors" Version="4.5.0" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Resources\Models\suzanne.obj">
      <SubType>Designer</SubType>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources\Shaders\fragment.glsl" />
    <EmbeddedResource Include="Resources\Shaders\vertex.glsl" />
    <EmbeddedResource Include="Resources\Models\cube.obj" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\NodeNetworkToolkit\NodeNetworkToolkit.csproj" />
    <ProjectReference Include="..\NodeNetwork\NodeNetwork.csproj" />
  </ItemGroup>
  <ItemGroup>
    <!-- This isn't supposed to be neccessary since we're including the desktop SDK. Once whatever is going on right now gets figured out, this should be removed -->
    <Reference Include="WindowsFormsIntegration" />
  </ItemGroup>
</Project>